{
    "env": {
        "browser": true,
        "es6": true,
        "node": true
    },
    "parserOptions": {
        "ecmaVersion": 8
    },
    "extends": "eslint:recommended",
    "rules": {
        "indent": ["error", "tab", {"SwitchCase": 1}],
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "strict": ["error", "global"],
        "handle-callback-err": ["error"],
        "no-new-require": ["error"],
        "callback-return":["error"]
    }
}
